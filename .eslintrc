{
	"parser": "@typescript-eslint/parser",
	"extends": ["plugin:@typescript-eslint/recommended", "prettier/@typescript-eslint", "plugin:prettier/recommended"],
	"parserOptions": {
		"ecmaVersion": 2020,
		"sourceType": "module"
	},
	"env": {
		"node": true,
		"browser": true,
		"es6": true
	},
	"rules": {
		"linebreak-style": ["warn", "unix"],
		"@typescript-eslint/no-unused-vars": "off",
		"prettier/prettier": [
			"error",
			{
				"arrowParens": "avoid",
				"bracketSpacing": true,
				"printWidth": 80,
				"semi": true,
				"singleQuote": true,
				"tabWidth": 4,
				"useTabs": true
			}
		]
	}
}
